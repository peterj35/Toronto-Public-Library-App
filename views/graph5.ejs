<!DOCTYPE html>
<meta charset="utf-8">
<style>

body {
  font: 10px sans-serif;
}

.arc path {
  stroke: #fff;
}

</style>
<body>
<script type="text/javascript" src="d3/d3.v3.js"></script>
<script>

var width = 700,
    height = 500,
    radius = Math.min(width, height) / 2;

	var getAngle = function (d) {
    return (180 / Math.PI * (d.startAngle + d.endAngle) / 2 - 90);
};
var color = d3.scale.ordinal()
    .range(["#98abc5", "#8a89a6", "#7b6888", "#6b486b", "#a05d56", "#d0743c", "#ff8c00"]);

var arc = d3.svg.arc()
    .outerRadius(radius - 10)
    .innerRadius(0);

var pie = d3.layout.pie()
    .sort(null)
    .value(function(d) { return d.Attendance; });

var svg = d3.select("body").append("svg")
    .attr("width", width)
    .attr("height", height)
  .append("g")
    .attr("transform", "translate(" + width / 2 + "," + height / 2 + ")");

d3.csv("d3/AttendanceForEachProgramAcrossAllBranches.csv", function(error, data) {

  data.forEach(function(d) {
    d.Attendance = +d.Attendance;
  });

  var g = svg.selectAll(".arc")
     .data(pie(data))
    .enter().append("g")
      .attr("class", "arc");

  g.append("path")
      .attr("d", arc)
      .style("fill", function(d) { return color(d.data.ProgramNames); });

  g.append("text")
      .attr("transform", function(d) { 
            return "translate(" + arc.centroid(d) + ") " +
                    "rotate(" + getAngle(d) + ")"; }) 
      .attr("dx", "5em")
      .style("text-anchor", "middle")
      .text(function(d) { return d.data.ProgramNames; });

});

</script>
