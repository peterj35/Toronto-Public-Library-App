<!DOCTYPE html>
<html>

  <head>
    <title>Catalog : Toronto Public Library Program Events</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../css/style.css">
    <link rel="stylesheet" href="../css/bootstrap.min.css" media="screen" title="no title" charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">
            <img src="images/logo.png" style="max-width:100px;" alt="" />
          </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="/"><i class="fa fa-home"></i> &nbsp;Home</a></li>
            <li class="active"><a href="/catalog"><i class="fa fa-database"></i> &nbsp;Catalog</a></li>
            <li><a href="/analytics"><i class="fa fa-bar-chart"></i> &nbsp;Analytics</a></li>
            <li><a href="/text-to-speech"><i class="fa fa-comment"></i> &nbsp;Text to Speech</a></li>
          </ul>
        </div>
      </div>
    </nav>


    <!-- Page Content -->
    <div>
      <div class="container-fluid">
        <div class="page-header">
          <h1>Catalog</h1>
        </div>
        <div class="col-md-12">
          <div class="table-container">
            <a href="/createinstance/<%= programName %>"><button type="button" class="btn btn-success">Create New Event</button></a>
            <table id="catalog" class="table margin-top">
              <thead>
                <tr>
                  <th>
                    <a href="#">Title</a>
                  </th>
                  <th>
                    <a href="#">Event Type</a>
                  </th>
                  <th>
                    <a href="#">Library</a>
                  </th>
                  <th>
                    <a href="#">Age Group</a>
                  </th>
                  <th>
                    <a href="#">Date</a>
                  </th>
                  <th>
                    <a href="#">Time</a>
                  </th>
                </tr>
              </thead>
              <% if (events.length < 1) { %>
                <div class="row">
                  No events found!
                </div>
              <% } %>
              <tbody>
                <% events.forEach(function(event, i) { %>
                <tr>
                  <td>
                    <%= event.name %>
                  </td>
                  <td>
                    <%= event.eventType %>
                  </td>
                  <td>
                    <%= event.location %>
                  </td>
                  <td>
                    <%= event.age %>
                  </td>
                  <td>
                    <%= event.date %>
                  </td>
                  <td>
                    <%= event.time %>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>


    <!-- jQuery -->
    <script src="js/jquery-1.11.3.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>


  </body>

</html>
